# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/road_db
POSTGRES_DB=road_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password

# Redis
REDIS_URL=redis://localhost:6379

# Kafka (if using message queue)
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC_DETECTIONS=events/road-damage

# Security
JWT_SECRET=your_secret_key_min_32_chars_very_long
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Configuration
API_TITLE=Road Quality Monitor API
API_VERSION=1.0.0
ENVIRONMENT=development
LOG_LEVEL=INFO

# Model Configuration
MODEL_PATH=/models/best.pt
MODEL_CONFIDENCE=0.40
MODEL_IOU=0.45

# Inference
WORKERS=4
INFERENCE_TIMEOUT=30
DEVICE=cuda:0  # or cpu for CPU-only

# Storage
S3_BUCKET=road-monitor-images
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

# Monitoring
PROMETHEUS_PORT=8001
SENTRY_DSN=

# Email (for alerts)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=

# Geolocation
GEOCODING_PROVIDER=nominatim
